<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#B33D4F" />
            <gradient android:angle="-90" android:startColor="#9F3742" android:endColor="#C6435C"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#B33D4F" />
            <solid android:color="#C6435C"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#B33D4F" />
            <gradient android:angle="-90" android:startColor="#C6435C" android:endColor="#9F3742" />
        </shape>
    </item>
</selector>